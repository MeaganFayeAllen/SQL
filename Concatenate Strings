/*
CREATED BY: MEAGAN-FAYE ALLEN
CREATED ON: 05/25/2023
DESCRIPTION: Join together fields Firstname and Lastname 
	and label as Full Name from the customers table where the customer's country is the USA
*/
SELECT
	FirstName,
	LastName,
	FirstnAME || ' ' || LastName AS 'Full Name'
FROM
	customers
WHERE
	Country = 'USA'
